---
import GroupFooterNav from "../blocks/GroupFooterNav.astro";
import Container from "../shared/Container.astro";
import FooterNav from "../shared/FooterNav.astro";
import Paragraph from "../shared/Paragraph.astro";
const currentYear = new Date().getFullYear();
---

<footer class="relative bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 pt-28 rounded-t-3xl">
    <!-- ... decoraciones y otros elementos ... -->
    <Container className="pb-8 relative overflow-hidden">
        <!-- ... otros elementos ... -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 relative">
            <!-- Sección Acerca de Nosotros -->
            <div class="flex flex-col">
                <h5 class="text-lg font-semibold">Nosotros</h5>
                <ul class="mt-4">
                    <li><a href="/about" class="hover:text-blue-600">Sobre Nosotros</a></li>
                    <li><a href="#" class="hover:text-blue-600">Equipo</a></li>
                    <li><a href="#" class="hover:text-blue-600">Testimonios</a></li>
                    <li><a href="#" class="hover:text-blue-600">Carreras</a></li>
                </ul>
            </div>

            <!-- Sección Servicios -->
            <div class="flex flex-col">
                <h5 class="text-lg font-semibold">Servicios</h5>
                <ul class="mt-4">
                    <li><a href="#" class="hover:text-blue-600">Terapia Individual</a></li>
                    <li><a href="#" class="hover:text-blue-600">Terapia de Grupo</a></li>
                    <li><a href="#" class="hover:text-blue-600">Evaluaciones Psicológicas</a></li>
                    <li><a href="#" class="hover:text-blue-600">Programas de Bienestar</a></li>
                </ul>
            </div>

            <!-- Sección Apoyo -->
            <div class="flex flex-col">
                <h5 class="text-lg font-semibold">Apoyo</h5>
                <ul class="mt-4">
                    <li><a href="#" class="hover:text-blue-600">Preguntas Frecuentes</a></li>
                    <li><a href="#" class="hover:text-blue-600">Recursos</a></li>
                    <li><a href="#" class="hover:text-blue-600">Política de Privacidad</a></li>
                    <li><a href="#" class="hover:text-blue-600">Términos y Condiciones</a></li>
                </ul>
            </div>

            <!-- Sección Legal -->
            <div class="flex flex-col">
                <h5 class="text-lg font-semibold">Legal</h5>
                <ul class="mt-4">
                    <li><a href="#" class="hover:text-blue-600">Derechos del Paciente</a></li>
                    <li><a href="#" class="hover:text-blue-600">Privacidad</a></li>
                    <li><a href="#" class="hover:text-blue-600">Términos de Servicio</a></li>
                </ul>
            </div>
        </div>
    </Container>
    <!-- Sección de derechos de autor -->
    <div class="bg-gradient-to-tl from-box-bg py-2 relative">
        <Container>
            <div class="flex justify-between items-center gap-6 md:text-lg text-heading-3">
                <div>
                    &copy;  {currentYear}  CDSEP. Todos los derechos reservados.
                </div>
                <div>
                    Orgullosamente creado por <a href="https://softdone.com.mx/" target="_blank" class="font-semibold">Softdone</a>
                </div>
            </div>
        </Container>
    </div>
</footer>
